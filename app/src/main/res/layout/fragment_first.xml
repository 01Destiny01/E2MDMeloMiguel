<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
 >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#A0A0A0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".FirstFragment">



<LinearLayout
    android:id="@+id/linearNumeros"
    android:layout_width="match_parent"
    android:background="#8E8989"
    android:layout_height="150dp"
    android:layout_gravity="top"
android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/Calculadora"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/Calculadora"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:background="@color/black"
        android:gravity="top|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
</LinearLayout>

    <LinearLayout

        android:id="@+id/numeros"
        android:layout_width="30dp"
        android:layout_height="500dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="-415dp"
        android:layout_weight="10"
        android:background="#8E8989"
        android:gravity="top"


        android:orientation="horizontal">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="%"
            app:layout_constraintBottom_toBottomOf="@id/Calculadora"
            app:layout_constraintEnd_toEndOf="@id/Calculadora"
            app:layout_constraintStart_toStartOf="@id/Calculadora"
            app:layout_constraintTop_toBottomOf="@id/Calculadora"


            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="รท"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/Calculadora"
            app:layout_constraintEnd_toEndOf="@id/Calculadora"
            app:layout_constraintStart_toStartOf="@id/Calculadora"
            app:layout_constraintTop_toBottomOf="@id/Calculadora" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="3"
            app:layout_constraintBottom_toBottomOf="@id/Calculadora"
            app:layout_constraintEnd_toEndOf="@id/Calculadora"
            app:layout_constraintStart_toStartOf="@id/Calculadora"
            app:layout_constraintTop_toBottomOf="@id/Calculadora" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=""
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/Calculadora"
            app:layout_constraintEnd_toEndOf="@id/Calculadora"
            app:layout_constraintStart_toStartOf="@id/Calculadora"
            app:layout_constraintTop_toBottomOf="@id/Calculadora" />


    </LinearLayout>


</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>